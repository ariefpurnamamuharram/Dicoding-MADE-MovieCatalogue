<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:padding="12dp">

    <ImageView android:id="@+id/film_poster"
               android:layout_width="160dp"
               android:layout_height="240dp"
               android:layout_marginTop="12dp"
               android:scaleType="centerCrop"
               android:src="@drawable/tv_poster_arrow"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               tools:ignore="ContentDescription"/>

    <TextView android:id="@+id/film_title"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:layout_marginStart="12dp"
              android:fontFamily="@font/roboto"
              android:text="Arrow"
              android:textColor="#EEAC1F"
              android:textSize="20sp"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@id/film_poster"
              app:layout_constraintEnd_toEndOf="parent"
              tools:ignore="HardcodedText"/>

    <LinearLayout android:id="@+id/release_date"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="12dp"
                  app:layout_constraintTop_toBottomOf="@id/film_title"
                  app:layout_constraintStart_toEndOf="@id/film_poster"
                  app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Tanggal rilis:"
                tools:ignore="HardcodedText"/>

        <TextView android:id="@+id/film_release_date"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="3dp"
                  android:fontFamily="@font/roboto"
                  android:textSize="14sp"
                  android:textStyle="normal"
                  android:text="10 Oktober 2012"
                  tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/user_score"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="12dp"
                  app:layout_constraintTop_toBottomOf="@id/release_date"
                  app:layout_constraintStart_toEndOf="@id/film_poster"
                  app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Penilaian penonton:"
                tools:ignore="HardcodedText"/>

        <TextView android:id="@+id/film_user_score"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="3dp"
                  android:fontFamily="@font/roboto"
                  android:textSize="14sp"
                  android:textStyle="normal"
                  android:text="58%"
                  tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/overview"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:orientation="vertical"
                  android:layout_marginTop="36dp"
                  app:layout_constraintTop_toBottomOf="@id/film_poster"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Ringkasan"
                tools:ignore="HardcodedText"/>

        <TextView android:id="@+id/film_overview"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="6dp"
                  android:fontFamily="@font/roboto"
                  android:textSize="14sp"
                  android:textStyle="normal"
                  android:text="Playboy miliarder manja, Oliver Queen, hilang dan diduga tewas ketika kapal pesiarnya hilang di laut. Dia kembali lima tahun kemudian seorang pria yang berubah, bertekad untuk membersihkan kota sebagai main hakim sendiri bersenjatakan busur."
                  tools:ignore="HardcodedText"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>